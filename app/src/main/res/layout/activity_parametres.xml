<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/settings_close"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:src="@drawable/icone_croix"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        android:contentDescription="Croix pour fermer la page" />

    <Button
        android:id="@+id/bt_add_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Ajouter une question"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="25dp">
    </Button>

    <EditText
        android:id="@+id/et_add_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ajouter une question"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/bt_add_question"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/bt_confirm_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Valider"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@+id/et_add_question"
        app:layout_constraintTop_toBottomOf="@+id/bt_add_question"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_change_delay"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier le délai"
        app:layout_constraintTop_toBottomOf="@+id/et_add_question"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/et_change_delay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="Nouveau délai"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/tv_change_delay"
        tools:ignore="MissingConstraints"
        />

    <Button
        android:id="@+id/bt_change_delay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginLeft="28dp"
        android:text="Valider"
        app:layout_constraintLeft_toRightOf="@+id/et_change_delay"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="164dp" />
</androidx.constraintlayout.widget.ConstraintLayout>